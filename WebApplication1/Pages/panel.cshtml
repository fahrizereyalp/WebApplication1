@page
@model PrivacyModel
@{
    ViewData["Title"] = "Panel Sayfası";
}


<div class="container my-5">
    <div class="row my-5">
        <h1>@ViewData["Title"]</h1>
        <p>Duyuru Paylaşmak İçin Aşağıdaki Formu Doldurun.</p>
        <form>
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" for="form6Example1">İsim</label>
                        <input type="text" id="form6Example1" class="form-control" placeholder="İsim" value="Fahri" required/>                        
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <label class="form-label" for="form6Example2">Soy İsim</label>
                        <input type="text" id="form6Example2" class="form-control" placeholder="Soy İsim" value="Zereyalp" required/>                        
                    </div>
                </div>
            </div>

            <!-- Text input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form6Example4">Adres</label>
                <input type="text" id="form6Example4" class="form-control" placeholder="Adres" value="Düzce" required/>                
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form6Example5">Email</label>
                <input type="email" id="form6Example5" class="form-control" placeholder="Email" value="fahrizereyalp@gmail.com" required/>                
            </div>

            <!-- Number input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form6Example6">Telefon</label>
                <input type="number" id="form6Example6" class="form-control" placeholder="Telefon" value="05555555555" required/>                
            </div>

            <!-- Message input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form6Example7">Duyuru</label>
                <textarea class="form-control" id="form6Example7" rows="4" placeholder="Duyuru" value="Duyuru Yazısı" required></textarea>                
            </div>

            <!-- Checkbox -->
            <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input me-2" type="checkbox" value="" id="form6Example8" required/>
                <label class="form-check-label" for="form6Example8"> Onaylıyor musunuz? </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Gönder</button>
        </form>


    </div>
</div>





